<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login Modal</title>

    <!-- لینک به بوت استرپ 5.3.3 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      .custom-navbar {
        background-color: #5400a3;
        color: white;
      }

      .modal-body,
      .modal-title,
      .modal-header,
      .modal-footer,
      .form-group p {
        color: #383e40;
      }

      body {
        color: #383e40;
      }
    </style>
  </head>

  <body>
   <!-- Modal -->

    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-sm" style="margin-top: 80px">
        <div class="modal-content">
          <div class="modal-header">
            <h1
              class="modal-title fs-6"
              id="exampleModalLabel"
              style="color: #58595a"
            >
              Log in to your account
            </h1>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <% if (messages.error) { %> <%= messages.error %> <% } %>

            <form action="/login" method="POST">
              <div class="form-group p-1">
                <label
                  class="is-hidden"
                  for="email"
                  style="font-size: 12px; color: #5f6364"
                  >Email address</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Email"
                  required
                />
              </div>

              <div class="form-group p-1">
                <label
                  class="is-hidden"
                  for="password"
                  style="font-size: 12px; color: #5f6364"
                  >Password</label
                >
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Password"
                  required
                />
              </div>

              <div class="form-group p-1">
                <button
                  type="submit"
                  class="btn btn-primary w-100"
                  style="margin-top: 20px; color: #383e40; color: white"
                >
                  Login
                </button>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <p class="d-flex justify-content-center" style="font-size: 14px; color: #5f6364">
              New to Ben Site? <a href="/register"
                >Register</a>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- اسکریپت‌های بوت استرپ -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <!-- اسکریپت برای باز کردن خودکار Modal بعد از بارگذاری صفحه -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        var myModal = new bootstrap.Modal(
          document.getElementById("exampleModal")
        );
        myModal.show();
      });
    </script>
  </body>
</html>
