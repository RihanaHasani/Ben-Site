<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Modal</title>

    <!-- لینک به بوت استرپ 5.3.3 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .custom-navbar{
        background-color:#5400A3;
        color:white
      }
      .modal-body, .modal-title, .modal-header, .modal-footer, .form-group p {
        color: #383E40;
    }
    body{
      color: #383E40;
    }

    
    </style>
</head>
<body>

  <nav class="navbar custom-navbar">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">
        <img src="" alt="" width="30" height="24" >
   
      </a>
      <form class="d-flex" role="search">
        <!-- <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"> -->
         <span  class="m-3 " style="font-size:14px">Already have an account?</span>
        <button class="btn btn-outline-dark  btn-sm m-2" type="submit"> <a href="/login" style="text-decoration: none; color: white;">Login</a>
        </button>
      </form>
    </div>
  </nav>

<!-- Modal -->

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog modal-sm" style="margin-top:80px">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-6" id="exampleModalLabel" style="color:#727475">Get Started on Ben site today</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" >
    
        <% if (messages.error) { %>
          <%= messages.error %>
        <% } %>

        <form action="/register" method="POST">
          <div class="form-group p-1">
            <label class="is-hidden" for="first-name"></label>
            <input type="text" id="first-name" name="firstName" class="form-control" placeholder="First name" required>
          </div>
          
          <div class="form-group p-1">
            <label class="is-hidden" for="last-name"></label>
            <input type="text" id="last-name" name="lastName" class="form-control" placeholder="Last name" required>
          </div>
        
          <div class="form-group p-1">
            <label class="is-hidden" for="email"></label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Email" required>
          </div>
          
          <div class="form-group p-1">
            <label class="is-hidden" for="password"></label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Password" required>
          </div>
          
          <div class="form-group p-1">
            <button type="submit" class="btn btn-primary w-100" style="margin-top:20px;color:#383E40;color:white">Create your account</button>
            <p style="margin-top:20px; color:#727475;font-size:12px">
              Signing up signifies that you have read and agree to the 
              <a href="#" data-bs-toggle="tooltip" title="Tooltip">Terms of Service</a> and our  
              <a href="#" data-bs-toggle="tooltip" title="Tooltip">Privacy Policy</a>.
            </p>
          </div>
        </form>
         

      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>


<!-- اسکریپت‌های بوت استرپ -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

<!-- اسکریپت برای باز کردن خودکار Modal بعد از بارگذاری صفحه -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var myModal = new bootstrap.Modal(document.getElementById('exampleModal'));
        myModal.show();
    });
</script>



  

</body>
</html>